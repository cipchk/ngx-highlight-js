{
  "name": "ngx-highlight-js",
  "version": "2.1.1",
  "description": "Angular for syntax highlighting with highlight.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cipchk/ngx-highlight-js.git"
  },
  "keywords": [
    "highlight",
    "ngx-highlight-js",
    "ng2-highlight-js",
    "highlight.js",
    "highlight-js",
    "syntax highlighting"
  ],
  "author": "cipchk <cipchk>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cipchk/ngx-highlight-js/issues"
  },
  "homepage": "https://github.com/cipchk/ngx-highlight-js#readme",
  "scripts": {
    "analyze": "ng build --prod --build-optimizer --stats-json",
    "lint": "tslint -p tsconfig.json -c tslint.json 'lib/*/*.ts'",
    "test": "ng test --code-coverage --watch=false",
    "site:build": "ng build --prod --build-optimizer",
    "site:gh": "ng build --prod --build-optimizer --base-href /ngx-highlight-js/ && gh-pages -d ./dist",
    "build": "node scripts/build.js",
    "release:next": "npm run build && cd publish && npm publish --access public --tag next",
    "release": "npm run build && cd publish && npm publish --access public"
  },
  "devDependencies": {
    "@angular/animations": "^6.1.9",
    "@angular/common": "^6.1.9",
    "@angular/compiler": "^6.1.9",
    "@angular/core": "^6.1.9",
    "@angular/forms": "^6.1.9",
    "@angular/http": "^6.1.9",
    "@angular/platform-browser": "^6.1.9",
    "@angular/platform-browser-dynamic": "^6.1.9",
    "@angular/router": "^6.1.9",
    "core-js": "^2.5.4",
    "rxjs": "^6.1.9",
    "zone.js": "^0.8.26",
    "@angular-devkit/build-angular": "^0.8.0",
    "@angular/cli": "^6.1.9",
    "@angular/compiler-cli": "^6.1.9",
    "@angular/language-service": "^6.1.9",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codecov": "^3.0.0",
    "codelyzer": "~4.2.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.3.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~2.9.2",
    "ng-packagr": "^4.1.1"
  },
  "ngPackage": {
    "lib": {
      "entryFile": "lib/index.ts"
    },
    "dest": "./publish"
  }
}
